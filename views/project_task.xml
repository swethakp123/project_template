<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    create this view on create a button on task form view-->
    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <header>
                <button name="create_task_template" type='object'
                        string='Create Task Template'
                        style="bg-color: #71639e" class="btn btn-primary">
                </button>
            </header>
        </field>
    </record>
</odoo>